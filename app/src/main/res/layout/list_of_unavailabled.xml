<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvUDDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October 24, 2021"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUDTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00 p.m."
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="@+id/tvUDDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvUDDate" />

    <TextView
        android:id="@+id/tvUDDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Holiday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUDTime" />
</androidx.constraintlayout.widget.ConstraintLayout>