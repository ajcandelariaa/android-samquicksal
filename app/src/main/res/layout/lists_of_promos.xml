<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivListPromoRestaurantImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sample_rlogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvListPromoTitle"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:text="2nd Year Anniversary Promo"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivListPromoRestaurantImage"
            app:layout_constraintTop_toTopOf="@+id/ivListPromoRestaurantImage" />

        <TextView
            android:id="@+id/tvListPromoAddress"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="Padre Noval St., EspaÃ±a Ave."
            android:textColor="@color/restaurantAddressTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvListPromoTitle"
            app:layout_constraintStart_toStartOf="@+id/tvListPromoTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvListPromoTitle" />

        <TextView
            android:id="@+id/tvListPromoValidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="June 10, 2021 - July 10, 2021  "
            android:textColor="@color/loginColor"
            app:layout_constraintEnd_toEndOf="@+id/tvListPromoAddress"
            app:layout_constraintStart_toStartOf="@+id/tvListPromoAddress"
            app:layout_constraintTop_toBottomOf="@+id/tvListPromoAddress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>