<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivBHLRLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/sample_rlogo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBHLRRName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Samyupsalamat"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvBHLType"
        app:layout_constraintStart_toEndOf="@+id/ivBHLRLogo"
        app:layout_constraintTop_toTopOf="@+id/ivBHLRLogo" />

    <TextView
        android:id="@+id/tvBHLRAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Morayta, Metro Manila"
        app:layout_constraintEnd_toEndOf="@+id/tvBHLRRName"
        app:layout_constraintStart_toStartOf="@+id/tvBHLRRName"
        app:layout_constraintTop_toBottomOf="@+id/tvBHLRRName" />

    <TextView
        android:id="@+id/tvBHLDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="April 28, 2021"
        app:layout_constraintEnd_toEndOf="@+id/tvBHLRAddress"
        app:layout_constraintStart_toStartOf="@+id/tvBHLRAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvBHLRAddress" />

    <TextView
        android:id="@+id/tvBHLType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat"
        android:text="No Show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBHLRRName" />

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/starColorNotActive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>