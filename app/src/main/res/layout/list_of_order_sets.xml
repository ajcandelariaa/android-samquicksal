<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="50dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvOrderSetName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="499"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOrderSetTagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="5 different Flavors of Pork, and 10 Side dishes"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOrderSetName"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSetName" />

    <TextView
        android:id="@+id/tvOrderSetDecription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Eat all you can Samgyeopsal chuchu description to"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOrderSetTagline"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSetTagline" />

    <ImageView
        android:id="@+id/ivOrderSetImage"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderSetDecription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvOrderSetDecription"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSetPrice"
        app:srcCompat="@drawable/sample_post" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Includes:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/ivOrderSetImage"
        app:layout_constraintTop_toBottomOf="@+id/ivOrderSetImage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodSetsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingLeft="45dp"
        android:paddingRight="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/starColorNotActive"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/foodSetsRecyclerView"/>

    <TextView
        android:id="@+id/tvOrderSetPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="5dp"
        android:text="Price: 499.00"
        app:layout_constraintStart_toStartOf="@+id/tvOrderSetDecription"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSetDecription" />
</androidx.constraintlayout.widget.ConstraintLayout>